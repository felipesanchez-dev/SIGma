{
  "name": "sigma-backend",
  "version": "1.0.2",
  "description": "SIGma (Σ) - Sistema de Gestión SG-SST con Arquitectura Modular Escalable",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:vercel": "echo 'Vercel builds automatically'",
    "start": "node dist/index.js",
    "start:vercel": "tsx dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "seed": "tsx scripts/seed.ts",
    "generate-keys": "tsx scripts/generate-keys.ts"
  },
  "keywords": [
    "sigma",
    "modular",
    "saas",
    "authentication",
    "typescript",
    "fastify"
  ],
  "author": "SIGma Development Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "argon2": "^0.31.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^6.9.7",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.9",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vercel/node": "^3.2.25",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0"
  }
}
